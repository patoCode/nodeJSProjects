<div class="card">
	<div class="card-header d-flex justify-content-between aling-items-center">
		<h2>{{imageData.title}}</h2>
		<button class="btn btn-danger" id="btn-delete" data-id="{{imageData.uniqueId}}">
			<i class="fa fa-times"></i> Eliminar
		</button>
	</div>

	<div class="card-body">
		{{imageData.description}}
		<div class="text-center">
			<img src="/public/upload/{{imageData.filename}}" alt="{{imageData.title}}" class="img-fluid">
		</div>
	</div>

	<div class="card-footer d-flex justify-content-between -align-items-center">
		<button class="btn btn-success" id="btn-like" data-id="{{imageData.filename}}">
			<i class="fas fa-thumbs-up"></i> Like
		</button>
		<p>
			<span class="likes-count">{{imageData.likes}}</span>
			<i class="fas fa-heart"></i>
		</p>

		<p>
			<i class="fas fa-eye"></i> {{imageData.views}}
		</p>
		<p>
			<i class="far fa-clock"></i> {{timeago imageData.timestamp}}
		</p>
	</div>
</div>

<div class="card mt-2">
	<div class="card-header d-flex justify-content-between align-items-center">
		<h3>Comments</h3>
		<button class="btn btn-info" id="btn-toggle-comment"><i class="fa fa-comment-o"></i> Post Comment</button>
	</div>
	<div class="card-body">
		<blockquote id="post-comment">
			<form action="/image/{{imageData.uniqueId}}/comment" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" name="name" placeholder="Tu nombre">
				</div>
				<div class="form-group">
					<input type="text" name="email" class="form-control" placeholder="Tu Email">
				</div>
				<div class="form-group">
					<textarea name="comment" rows="3" class="form-control" placeholder="Tu comentario"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-success"><i class="fa fa-comment"></i> Enviar</button>
				</div>
			</form>
		</blockquote>
		<ul class="list-group p-4">
			{{#each comments}}
				<li class="list-group-item">
					<div class="row">
						<a href="" class="col text-center">
							<img src="http://gravatar.com/avatar/{{gravatar}}?d=retro&s=45" alt="">
						</a>
						<blockquote class="col">
							<p class="lead">
								{{comment}}
							</p>
							<footer class="blockquote-footer">
								{{name}} - {{timeago timestamp}}
							</footer>
						</blockquote>
					</div>
				</li>
			{{/each}}
		</ul>
	</div>
</div>