<div class="container p-4">
  <div class="row">
    <div class="col-md-12">
      <div class="card card-body">
        <form action="/links/add" method="post">
            <div class="form-group">
                <input type="text" class="form-control" name="title" placeholder="Titulo" autofocus>
            </div>

            <div class="form-group">
                <input type="text" class="form-control" name="url" placeholder="URL://" autofocus>
            </div>

            <div class="form-group">
                <textarea name="name" rows="2" class="form-control" placeholder="Descripcion"></textarea>
            </div>

            <div class="form-group">
              <button class="btn btn-info" type="submit">
                Enviar
              </button>
            </div>


        </form>
      </div>
    </div>
  </div>
</div>
