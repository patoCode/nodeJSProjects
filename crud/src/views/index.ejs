<% include partials/_header %>
<% include partials/_menu %>
<div class="container">
	<div class="row">
		<!-- FORM -->
		<div class="col-md-5">
			<div class="card">
				<div class="card-body">
					<form action="/add" method="POST">
						<div class="form-group">
							<input type="text" name="title" placeholder="Titulo" class="form-control">
						</div>
						<div class="form-group">
							<textarea name="description" rows="3" placeholder="Descripcion" class="form-control"></textarea>
						</div>
						<button type="submit" class="btn btn-primary btn-block">
							Agregar
						</button>
					</form>
				</div>
			</div>
		</div>
		<!-- LIST -->
		<div class="col-md-7">
			<table class="table table-bordered table-hover">
				<thead>
					<tr>
						<th>Nro.</th>
						<th>Title</th>
						<th>Description</th>
						<th>Status</th>
					</tr>
				</thead>
				<tbody>
					<% for(var i = 0; i< taskList.length; i++){ %>
					<tr>
						<td><%= i+1 %></td>
						<td><%= taskList[i].title %></td>
						<td><%= taskList[i].description %></td>
						<td>
							<a href="/turn/<%= taskList[i]._id %>"
								class="btn <%= taskList[i].status ? 'btn-success':'btn-dark' %>">Done</a>
							<a href="/delete/<%= taskList[i]._id %>" class="btn btn-danger">Delete</a>
							<a href="/edit/<%= taskList[i]._id %>" class="btn btn-info">Edit</a>
						</td>
					</tr>
					<% }%>

				</tbody>

			</table>

		</div>
	</div>
</div>
<% include partials/_footer %>
