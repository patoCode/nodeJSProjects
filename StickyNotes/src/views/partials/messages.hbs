{{#if success_msg}}
<div class="row" id="alert_box">
  <div class="col s12 m12">
    <div class="card green">
      <div class="row">
        <div class="col s12 m10">
          	<div class="card-content white-text">
                <p>{{success_msg}}</p>
    		</div>
      </div>
      <div class="col s12 m2">
        <i class="large material-icons" id="alert_close" aria-hidden="true">close</i>
      </div>
    </div>
   </div>
  </div>
</div>
{{/if}}

{{#if errors_msg }}
<div class="row" id="alert_box">
  <div class="col s12 m12">
    <div class="card red">
      <div class="row">
        <div class="col s12 m10">
            <div class="card-content white-text">
                <p>{{errors_msg}}</p>
        </div>
      </div>
      <div class="col s12 m2">
        <i class="large material-icons" id="alert_close" aria-hidden="true">close</i>
      </div>
    </div>
   </div>
  </div>
</div>
{{/if}}