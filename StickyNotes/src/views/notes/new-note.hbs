<div class="col s6 m6 offset-m3">
  <div class="card  black-text">
    <div class="card-content">
      <span class="card-title">Nueva nota</span>
      <form action="/notes/new-note" method="POST">

          <div class="input-field col s12">
            <i class="material-icons prefix">label_outline</i>
            <input type="text" id="title" name="title" placeholder="Titulo" class="validate">
          </div>

          <div class="input-field col s12">
            <i class="material-icons prefix">event_note</i>
            <input type="text" name="description" id="description" placeholder="Descripcion" class="validate">
          </div>

          <button class="btn-floating btn-large indigo darken-4" type="submit">
            <i class="large material-icons">add</i>
          </button>
      </form>
    </div>
  </div>
</div>