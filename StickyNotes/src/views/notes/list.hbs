<p class="center-align"><i class="material-icons">person</i> USUARIO ACTIVO:  {{user.name}}</p>
{{#each notes}}
<div class="col s4 m4 animated slideInDown">
  <div class="card  black-text">
    <div class="card-content">
      <span class="card-title">
          {{title}}
          <a href="/notes/edit/{{_id}}">
            <i class="small material-icons">mode_edit</i>
          </a>
      </span>
      <p>{{description}}</p>
      <span class="new badge">{{create_at}}</span>
    </div>
    <ul class="pagination">
      <li>
        <button class="btn-large deep-purple darken-4">
          <i class="material-icons white-text">pause</i> </button>
      </li>
      <li>
        <button class="btn-large deep-purple darken-4">
          <i class="material-icons white-text">play_arrow</i> </button>
      </li>
      <li>
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button class="btn-large deep-purple darken-4" type="submit">
            <i class="material-icons white-text">delete</i>
          </button>
        </form>

      </li>
    </ul>
  </div>
</div>
{{else}}
<div class="col s4 m4 offset-m4">
  <div class="card  black-text">
    <div class="card-content">
      <span class="card-title">
          No hay notas
      </span>

    </div>
    <div class="card-action">
      <a href="/notes/add">
        <i class="large material-icons pink accent-4 white-text">event</i>
      </a>
    </div>
  </div>
</div>
{{/each}}