
<div class="col s6 m6 offset-m3">
  <div class="card  black-text">
    <div class="card-content">
      <span class="card-title">Edit note</span>
      <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
          <input type="hidden" name="_method" value="PUT">

          <div class="input-field col s12">
            <i class="material-icons prefix">label_outline</i>
            <input type="text" id="title" name="title" placeholder="Titulo" class="validate" value="{{note.title}}">
          </div>

          <div class="input-field col s12">
            <i class="material-icons prefix">event_note</i>
            <input type="text" name="description" id="description" placeholder="Descripcion" class="validate" value="{{note.description}}">
          </div>

          <button class="btn-floating btn-large pink" type="submit">
            <i class="large material-icons">add</i>
          </button>
      </form>
    </div>
  </div>
</div>