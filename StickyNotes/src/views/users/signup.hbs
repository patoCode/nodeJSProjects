<div class="col s6 m6 offset-m3">
  <div class="card  black-text">
    <div class="card-content">
      <span class="card-title">Crear cuenta</span>
      <form action="/user/signup" method="POST">
          <div class="input-field col s12">
            <i class="material-icons prefix">account_circle</i>
            <input type="text" id="name" name="name" placeholder="Name" class="validate" value="{{name}}">
          </div>

          <div class="input-field col s12">
            <i class="material-icons prefix">event_note</i>
            <input type="text" name="email" id="email" placeholder="Email" class="validate" value="{{email}}">
          </div>

          <div class="input-field col s12">
            <i class="material-icons prefix">vpn_key</i>
            <input type="password" name="password" id="password" placeholder="Password" class="validate" value="{{password}}">
          </div>

          <div class="input-field col s12">
            <i class="material-icons prefix">vpn_key</i>
            <input type="password" name="confirm_password" id="confirm_password" placeholder="Confirm password" class="validate" value="{{confirm_password}}">
          </div>

          <button class="btn-floating btn-large deep-purple darken-4" type="submit">
            <i class="large material-icons">send</i>
          </button>
      </form>
    </div>
  </div>
</div>